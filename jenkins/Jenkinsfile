pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/udaybhadauria/flask-cicd.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('flask-cicd-app')
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    sh 'docker rm -f flask-app || true'
                    sh 'docker run -d -p 5000:5000 --name flask-app flask-cicd-app'
                }
            }
        }
    }
}
